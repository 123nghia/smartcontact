{
  "name": "test-token-ecosystem",
  "version": "1.0.0",
  "description": "Test Token Ecosystem - Complete BEP-20/ERC-20 token with vesting, staking, governance, and buyback mechanisms",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "node scripts/run-tests.js unit",
    "test:integration": "node scripts/run-tests.js integration", 
    "test:gas": "node scripts/run-tests.js gas --gas-report",
    "test:comprehensive": "node scripts/run-tests.js comprehensive",
    "test:all": "node scripts/run-tests.js all",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy-testtoken-ecosystem.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy-testnet.js --network bsc-testnet",
    "deploy:mainnet": "hardhat run scripts/deploy-production.js --network bsc-mainnet",
    "verify": "hardhat run scripts/verify-contracts.js",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "docs": "solidity-docgen",
    "deploy:all": "npm run deploy:local && npm run deploy:testnet",
    "test:full": "npm run test:all && npm run test:coverage",
    "demo": "node scripts/demo-tests.js",
    "quick-test": "./quick-test.sh",
    "quick-deploy": "hardhat run scripts/quick-deploy.js",
    "test-ecosystem": "hardhat run scripts/test-ecosystem.js",
    "test-bnb": "hardhat run scripts/test-bnb-config.js",
    "deploy-and-test": "./deploy-and-test.sh",
    "deploy": "hardhat run scripts/deploy.js",
    "test": "hardhat run scripts/test.js",
    "full": "hardhat run scripts/full.js",
    "deploy:bsc": "hardhat run bsc-deployment/scripts/deploy-bsc.js --network bscTestnet",
    "verify:bsc": "hardhat run bsc-deployment/scripts/verify-contracts.js --network bscTestnet",
    "test:bsc": "hardhat run bsc-deployment/scripts/test-bsc.js --network bscTestnet",
    "setup": "cp env.example .env && echo 'Please update .env with your actual values'"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "bsc",
    "smart-contracts",
    "defi",
    "token",
    "vesting",
    "staking",
    "governance",
    "buyback",
    "burn"
  ],
  "author": "Test Token Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "chai": "^4.5.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "typechain": "^8.3.2",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.0",
    "solhint": "^4.0.0",
    "solidity-docgen": "^0.6.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.6",
    "dotenv": "^17.2.3",
    "solc": "^0.8.20"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
